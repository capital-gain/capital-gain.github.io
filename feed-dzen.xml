---
layout: none
permalink: /feed-dzen.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:media="http://search.yahoo.com/mrss/"
     xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url | xml_escape }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <language>{{ site.lang }}</language>
    {% assign all_posts = site.posts | sort: 'date' | reverse %}
    {% for post in all_posts %}
    <item>
      <title>{{ post.title | xml_escape | default: post.slug }}</title>
      <guid>{{ post.id | xml_escape }}</guid>
      <link>{{ post.url | absolute_url }}</link>
      <pdalink>{{ post.url | absolute_url }}</pdalink>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <category>native-draft</category>
      {% if post.excerpt == empty %}
      <category>format-post</category>
      {% else %}
      <category>format-article</category>
      {% endif %}
      <category>noindex</category>
      <category>comment-all</category>
      {% if post.excerpt != empty %}
      <description><![CDATA[{{ post.excerpt | strip_html | xml_escape }}]]></description>
      {% endif %}
      <content:encoded><![CDATA[
        {{ post.content | xml_escape_once }}
      ]]></content:encoded>
    </item>
    {% endfor %}
  </channel>
</rss>
